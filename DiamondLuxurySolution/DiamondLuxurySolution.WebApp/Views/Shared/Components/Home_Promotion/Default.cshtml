@using DiamondLuxurySolution.Data.Entities
@using DiamondLuxurySolution.ViewModel.Common
@using DiamondLuxurySolution.ViewModel.Models.Promotion
@model List<PromotionVm>
<link href="https://fonts.googleapis.com/css2?family=Jura:wght@300..700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
      integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
      integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.green.min.css"
      integrity="sha512-C8Movfk6DU/H5PzarG0+Dv9MA9IZzvmQpO/3cIlGIflmtY3vIud07myMu4M/NTPJl8jmZtt/4mC9bAioMZBBdA==" crossorigin="anonymous"
      referrerpolicy="no-referrer" />
<style>
    .container-promotion {
        padding: 40px 140px;
        background: #131212;
        margin-bottom: 20px;
        display:block;
    }

    .row-promotion {
        display: flex;
        flex-wrap: wrap;
    }

    .padd-mb {
        padding: 20px
    }

        .padd-mb a img:hover{
            transform: scale(1.3);
        }

    span {
        font-family: Jura
    }

    h3 {
        font-family: Jura;
        font-size: 20px;
        font-weight: 600;
        line-height: 24.72px;
        margin-top: 10px;
        margin-bottom: 10px;
        color: aliceblue;
    }

    p {
        font-family: Jura;
    }

    .img-promotion {
        width: 100%;
        display: inline-block;
        min-width: 100%;
        overflow: hidden
    }

        .img-promotion img {
            height: 279px;
            width: 100%;
            object-fit: cover;
            transition: transform .65s cubic-bezier(.05,.2,.1,1);
            border-radius: 2px;
            display:block;
        }

</style>
<section class="margin-top-40px full-width backgnew">
    <div class="container-promotion">
        <div class="row-promotion justify-content-center">
            <div class="col-md-12" style="text-align: center;padding-bottom: 20px;">
                <h1 style="color: #E8BE6F; font-weight: bold; font-family: sans-serif; margin-bottom: 0px; font-size: 30px">
                    ƯU ĐÃI HOT ĐANG DIỄN RA
                </h1>
                <p style="margin-top: 0px" class="font-16px">Mua sắm trang sức với giá tiết kiệm hơn</p>
            </div>
            @{
                var promotionHot = Model.OrderByDescending(m => m.StartDate).Take(6).ToList();
            }
            @for (int i = 0; i < promotionHot.Count; i++)
            {
                if (i == 2 || i == 3)
                {
                    <div class="col-md-6 col-lg-6 col-6 padd-mb">
                        <a href="/Promotion/Detail?id=@promotionHot[i].PromotionId" class="img-promotion">
                            <img src="@promotionHot[i].BannerImage" alt="Alternate Text" />
                        </a>
                        <a href="/Promotion/Detail?id=@promotionHot[i].PromotionId" title="ƯU ĐÃI ĐẶC BIỆT" onmouseover="this.style.color='#B48C72'" onmouseout="this.style.color='#000000'" style="color: rgb(0, 0, 0);">
                            <h3>ƯU ĐÃI ĐẶC BIỆT</h3>
                        </a>
                        <p>
                            <span style="color: #E8BE6F;">
                                <span>@promotionHot[i].Description</span>
                            </span>
                        </p>
                    </div>
                }
                else
                {
                    <div class="col-md-6 col-lg-3 col-6 padd-mb">
                        <a href="/Promotion/Detail?id=@promotionHot[i].PromotionId" class="img-promotion">
                            <img src="@promotionHot[i].BannerImage" alt="Alternate Text" />
                        </a>
                        <a href="/Promotion/Detail?id=@promotionHot[i].PromotionId" title="ƯU ĐÃI ĐẶC BIỆT" onmouseover="this.style.color='#B48C72'" onmouseout="this.style.color='#000000'" style="color: rgb(0, 0, 0);">
                            <h3>ƯU ĐÃI ĐẶC BIỆT</h3>
                        </a>
                        <p>
                            <span style="color: #E8BE6F;">
                                <span>@promotionHot[i].Description</span>
                            </span>
                        </p>
                    </div>
                }
            }
        </div>
        
    </div>

</section>
