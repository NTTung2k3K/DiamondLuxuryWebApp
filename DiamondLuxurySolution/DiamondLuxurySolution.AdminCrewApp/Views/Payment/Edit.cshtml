@model DiamondLuxurySolution.ViewModel.Models.Payment.PaymentVm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh sửa</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
                        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{
            <div class="row">
                <div class="col-md-6">

                    <form asp-action="Edit" asp-controller="Payment" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group m-2">
                            <label asp-for="PaymentId" class="control-label  m-2">ID của Phương Thức Thanh Toán</label>
                                <input asp-for="PaymentId" class="form-control" readonly />
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="PaymentMethod" class="control-label m-2"> Phương thức thanh toán</label>
                    <input asp-for="PaymentMethod" class="form-control"  />
                                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <label asp-for="Description" class="control-label m-2">Mô tả</label>
                    <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch m-4">
                            <label asp-for="Status" class="control-label mt-1">Hiển thị</label>
                            <input class="form-check-input f-18" type="checkbox" asp-for="Status">
                        </div>
                        <div class="form-group row">
                            <div class="col-md-8">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </div>
                            <div class="col-md-4">
                                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Payment")'">Về trang quản lí danh mục</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
}
else
{
            <a class="m-5" asp-action="Index" asp-controller="Payment">Về trang quản lí thanh toán</a>

}
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
