@model DiamondLuxurySolution.ViewModel.Models.Payment.PaymentVm
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
                        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

            <h3 style="color: red">Bạn có muốn xóa thanh toán này?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                ID của Phương Thức Thanh Toán
                    </dt>
                    <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaymentId)
                    </dd>
                    <dt class="col-sm-2">
                       Phương thức thanh toán
                    </dt>
                    <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PaymentMethod)
                    </dd>
                    <dt class="col-sm-2">
                        Mô tả
                    </dt>
                    <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Hiển thị
                    </dt>
                    <dd class="col-sm-10">
                        <div class="form-check form-switch ">
                            <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Status" value="@Model.Status" disabled />
                        </div>
                    </dd>
                </dl>
                <form asp-action="Delete" asp-controller="Payment" method="post">
                    <input type="hidden" name="PaymentId" value="@Model.PaymentId" />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Payment")'">Về trang quản lí danh mục</button>
                </form>
            </div>
}
else
{
            <a class="m-3" asp-action="Index" asp-controller="Payment">Về trang quản lí thanh toán</a>
}
