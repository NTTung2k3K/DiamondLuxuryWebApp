@using DiamondLuxurySolution.Data.Entities
@using DiamondLuxurySolution.ViewModel.Common
@using DiamondLuxurySolution.ViewModel.Models.Payment

@model PageResult<PaymentVm>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mb-4">
	<div class="col-md-4">
		<a asp-action="Create" asp-controller="Payment" class="btn btn-success">Tạo mới</a>
	</div>
	<div class="col-md-3">
	</div>
	<div class="col-md-5">
			<form asp-action="Index" asp-controller="Payment" method="get" class="d-flex">

				<div class="search">
					<input type="text" name="Keyword" class="form-control mr-2" value="@ViewBag.txtLastSeachValue" placeholder="Tìm kiếm thanh toán" />
					<button type="submit">Tìm kiếm</button>
				</div>
			</form>
	</div>
</div>
@if (ViewBag.Errors != null)
{
	foreach (var error in ViewBag.Errors)
	{
								<h6 class="text-danger">@error</h6>
	}
}

@if (Model.Items != null && Model.Items.Count > 0)
{

				<table class="table">
					<thead>
						<tr class="text-center">
							<th >
								<label>Phương Thức Thanh Toán</label>
							</th>
							<th>
								<label>Mô Tả</label>
							</th>
							<th>
								<label>Hiển thị</label>
							</th>
							<th>Cài đặt</th>
						</tr>
					</thead>
					<tbody>
			@foreach (var item in Model.Items)
			{
										<tr class="text-center">
											<td>@item.PaymentMethod</td>
											<td>@item.Description</td>
					@if (item.Status == true)
					{
								   <td>
									  <span class="badge bg-success rounded-pill">Hoạt động</span>

								   </td>
					}
					else
					{
								   <td>
									  <span class="badge bg-danger rounded-pill">Chưa hoạt động</span>
								   </td>

					}
											<td class="text-center">
						@Html.ActionLink("Chỉnh sửa", "Edit", new { PaymentId = item.PaymentId }, new { @class = "btn btn-warning" })
						@Html.ActionLink("Xem chi tiết", "Detail", new { PaymentId = item.PaymentId }, new { @class = "btn btn-info" })
						@Html.ActionLink("Xóa", "Delete", new { PaymentId = item.PaymentId }, new { @class = "btn btn-danger" })
											</td>
										</tr>
			}
					</tbody>
				</table>
				<div class="d-flex justify-content-center align-items-center">
		@await Component.InvokeAsync("Pager", Model)
				</div>
}
else
{
				<h1>Không có thông tin</h1>
}
