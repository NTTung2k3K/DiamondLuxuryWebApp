@model DiamondLuxurySolution.ViewModel.Models.Discount.DiscountVm

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
	foreach (var error in ViewBag.Errors)
	{
		<h6 class="text-danger">@error</h6>
	}
}
@if (Model != null)
{

	<h3 style="color: red">Bạn có muốn xóa chiết khấu này?</h3>
	<div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				ID của Chiết Khấu
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DiscountId)
			</dd>
			<dt class="col-sm-2">
				Tên chiết khấu
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DiscountName)
			</dd>
			<dt class="col-sm-2">
				Mô tả chiết khấu
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Description)
			</dd>
			<dt class="col-sm-2">
				Phần trăm chiết khấu
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.PercentSale)
			</dd>
			<dt class="col-sm-2">
				Điểm bắt đầu chiết khấu
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.From)
			</dd>
			<dt class="col-sm-2">
				Điểm đến chiết khấu
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.To)
			</dd>
			<dt class="col-sm-2">
				Hiển thị
			</dt>
			<dd class="col-sm-10">
				<div class="form-check form-switch ">
					<input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Status" value="@Model.Status" disabled />
				</div>
			</dd>
		</dl>
		<form asp-action="Delete" asp-controller="Discount" method="post">
			<input type="hidden" name="DiscountId" value="@Model.DiscountId" />
			<input type="submit" value="Xóa" class="btn btn-danger" />
			<button style="margin-left:100px" type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Discount")'">Về trang quản lí chiết khấu</button>
		</form>
	</div>
}
else
{
	<a class="m-3" asp-action="Index" asp-controller="Discount">Về trang quản lí chiết khấu</a>
}
