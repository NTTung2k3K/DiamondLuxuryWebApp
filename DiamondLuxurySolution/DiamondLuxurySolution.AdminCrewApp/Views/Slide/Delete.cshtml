@model DiamondLuxurySolution.ViewModel.Models.Slide.SlideViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <h3 style="color: red">Bạn có muốn xóa Slide này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                ID của Slide
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SlideId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên Slide
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SlideName)
            </dd>
            <dt class="col-sm-3 mb-3">
                Mô Tả
            </dt>
            <dd class="col-sm-9">
                @if (string.IsNullOrEmpty(Model.Description))
                {
                    <p>Không có</p>
                }
                else
                {
                    @Html.DisplayFor(model => model.Description)

                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Slide URL
            </dt>
            <dd class="col-sm-9">
                @if (string.IsNullOrEmpty(Model.SlideUrl))
                {
                    <p>Không có</p>
                }
                else
                {
                    @Html.DisplayFor(model => model.SlideUrl)

                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Slide Image
            </dt>
            <dd class="col-sm-9">
                @if (Model.SlideImage != "")
                {
                    <img src="@Model.SlideImage" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có Hình Ảnh</h5>
                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Hiển thị
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Status" value="@Model.Status" disabled />
                </div>
            </dd>
        </dl>
        <form asp-action="Delete" asp-controller="Slide" method="post">
            <input type="hidden" name="SlideId" value="@Model.SlideId" />
            <div class="row">
                <div class="col-sm-4">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </div>
                <div class="col-sm-8">
                    <a asp-action="Index" class="btn btn-secondary">Về trang quản lý Slide</a>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <a class="m-3 btn btn-secondary" asp-action="Index">Về trang quản lí Slide</a>
}

