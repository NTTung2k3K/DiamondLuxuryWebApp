@model DiamondLuxurySolution.ViewModel.Models.About.AboutVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Chi tiết About</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.AboutId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.AboutId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên Thông Tin Liên Hệ
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.AboutName)
            </dd>
            <dt class="col-sm-3 mb-3">
                Mô Tả
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3 mb-3">
                Hình ảnh
            </dt>
            <dd class="col-sm-9">
                @if (Model.AboutImage != "")
                {
                    <img src="@Model.AboutImage" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có Hình Ảnh</h5>
                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Hiển thị
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Status" value="@Model.Status" disabled />
                </div>
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { AboutId = Model.AboutId }, new { @class = "btn btn-warning" })
        </div>
        <div class="col-sm-9">
            <a class="btn btn-secondary" asp-action="Index">Về trang quản lí About</a>
        </div>
    </div>

}