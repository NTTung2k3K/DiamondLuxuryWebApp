@model DiamondLuxurySolution.ViewModel.Models.Warranty.CreateWarrantyRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tạo mới giá kim cương</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Errors != null)
        {
            foreach (var error in ViewBag.Errors)
            {
                <h6 class="text-danger">@error</h6>
            }
        }

        <form asp-action="Create" asp-controller="Warranty" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="WarrantyName" class="control-label">Tên phiếu bảo hành</label>
                <input asp-for="WarrantyName" class="form-control" />
                <span asp-validation-for="WarrantyName" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Description" class="control-label m-2">Mô Tả</label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group m-2">
                <label asp-for="DateActive" class="control-label">Ngày bắt đầu</label>
                <input asp-for="DateActive" class="form-control" type="date" />
                <span asp-validation-for="DateActive" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="DateExpired" class="control-label">Ngày kết thúc</label>
                <input asp-for="DateExpired" class="form-control" type="date" />
                <span asp-validation-for="DateExpired" class="text-danger"></span>
            </div>

            <div class="form-check form-switch m-4">
                <label asp-for="Status" class="control-label mt-1">Hiển thị</label>
                <input class="form-check-input f-20" type="checkbox" asp-for="Status">
            </div>


            <div class="form-group row">
                <div class="col-md-5">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
                <div class="col-md-7 mt-2">
                    <a class="m-6 btn btn-secondary" asp-action="Index">Về trang quản lí phiếu bảo hành</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
