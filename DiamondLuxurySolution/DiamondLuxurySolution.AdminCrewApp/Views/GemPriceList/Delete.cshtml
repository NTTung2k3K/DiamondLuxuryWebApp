@model DiamondLuxurySolution.ViewModel.Models.GemPriceList.GemPriceListVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}

@if (Model != null)
{

    <h3 style="color: red">Bạn có muốn giá kim cương này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.GemPriceListId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GemPriceListId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Giát cắt
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cut)
            </dd>
            <dt class="col-sm-3 mb-3">
                Độ tinh khiết
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Clarity)
            </dd>
            <dt class="col-sm-3 mb-3">
                Trọng lượng Carat
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CaratWeight)
            </dd>
            <dt class="col-sm-3 mb-3">
                Màu sắc
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class="col-sm-3 mb-3">
                Giá
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => @Model.Price)
            </dd>
            <dt class="col-sm-3 mb-3">
                Ngày ảnh hưởng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => @Model.effectDate)
            </dd>
            <dt class="col-sm-3 mb-3">
                Hiển thị
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Active" value="@Model.Active" disabled />
                </div>
            </dd>
        </dl>
        <form asp-action="Delete" asp-controller="GemPriceList" method="post">
            <input type="hidden" name="GemPriceListId" value="@Model.GemPriceListId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a class="m-3 btn btn-secondary" asp-action="Index" asp-controller="GemPriceList">Về trang quản lí giá kim cương</a>
        </form>
    </div>
}
else
{
    <a class="m-3 btn btn-secondary" asp-action="Index" asp-controller="GemPriceList">Về trang quản lí giá kim cương</a>
}


