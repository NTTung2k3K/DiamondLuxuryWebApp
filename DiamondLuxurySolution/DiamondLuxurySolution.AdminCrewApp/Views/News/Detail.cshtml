@model DiamondLuxurySolution.ViewModel.Models.News.NewsVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết tin tức</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id của tin tức
            </dt>
            <dd class="col-sm-10">
                ID của Tin Tức
            </dd>
            <dt class="col-sm-2">
                Người viết
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Writer.FullName)
            </dd>
            <dt class="col-sm-2">
                Tên tin tức
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NewName)
            </dd>
            <dt class="col-sm-2">
                Hình đại diện
            </dt>
            <dd class="col-sm-10">
                @if (Model.Image != null && Model.Image != "")
                {
                    <img src="@Model.Image" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có hình ảnh</h5>
                }
            </dd>
            <dt class="col-sm-2">
                Trạng thái
            </dt>
            <dd class="col-sm-10">
                @if (Model.Status)
                {
                    <div style="color:green">Hoạt động</div>
                }
                else
                {
                    <div style="color:red">Đã ẩn</div>
                }
               
            </dd>
            <dt class="col-sm-2">
                Lần chỉnh sửa gần nhất
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateModified)
            </dd>
            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Description)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { NewsId = Model.NewsId }, new { @class = "btn btn-warning" })
        </div>
        <div class="col-md-6">
            <a class="m-6 btn btn-secondary" asp-action="Index" asp-controller="News">Về trang quản lí tin tức</a>
        </div>
    </div>
}
else
{
    <div>
        <a class="m-6 btn btn-secondary" asp-action="Index" asp-controller="News">Về trang quản lí tin tức</a>
    </div>
}


