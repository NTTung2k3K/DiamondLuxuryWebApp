@model DiamondLuxurySolution.ViewModel.Models.SubGem.SubGemVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{
    <h3 style="color: red">Bạn có muốn xóa viên đá phụ này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                ID của Đá Phụ
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SubGemId)
            </dd>
            <dt class="col-sm-4">
                Tên viên đá phụ
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SubGemName)
            </dd>
            <dt class="col-sm-4">
                Giá viên đá phụ
            </dt>
            <dd class="col-sm-8">
                @(Model.SubGemPrice != 0 ? Model.SubGemPrice.ToString("N0") + "₫" : "Không có giá trị")
            </dd>
            <dt class="col-sm-4">
                Mô tả viên đá phụ
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                Sử dụng
            </dt>
            <dd class="col-sm-8">
                <div class="form-check form-switch col-sm-8">
                    <input class="form-check-input f-18" type="checkbox" asp-for="Active" value="@Model.Active"/>
                </div>
            </dd>
        </dl>
        <form asp-action="Delete" asp-controller="SubGem" method="post">
            <input type="hidden" name="SubGemId" value="@Model.SubGemId" />
            <div class="row">
                <div class="col-sm-4">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </div>
                <div class="col-sm-8">
                    <a asp-action="Index" class="btn btn-secondary">Về trang quản lý viên đá phụ</a>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <a class="m-3 btn btn-secondary" asp-action="Index">Về trang quản lý viên đá phụ</a>
}
