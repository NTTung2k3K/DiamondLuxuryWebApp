@model DiamondLuxurySolution.ViewModel.Models.SubGem.SubGemVm

@{
    ViewData["Title"] = "Detail";
}

<h1>Chi tiết viên đá phụ</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.SubGemId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SubGemId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên viên đá phụ
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SubGemName)
            </dd>
            <dt class="col-sm-3 mb-3">
                Giá viên đá phụ
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SubGemPrice)
            </dd>
            <dt class="col-sm-3 mb-3">
                Mô tả viên đá phụ
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3 mb-3">
                Hiển thị
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Active" value="@Model.Active" disabled />
                </div>
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { SubGemId = Model.SubGemId }, new { @class = "btn btn-warning" })
        </div>
        <div class="col-sm-9">
            <a class="btn btn-secondary" asp-action="Index">Về trang quản lí viên đá phụ</a>
        </div>
    </div>

}