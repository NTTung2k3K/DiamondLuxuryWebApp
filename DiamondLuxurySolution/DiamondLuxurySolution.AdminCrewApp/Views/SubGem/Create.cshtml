@model DiamondLuxurySolution.ViewModel.Models.SubGem.CreateSubGemRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới vật liệu</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Errors != null)
        {
            foreach (var error in ViewBag.Errors)
            {
                <h6 class="m-2 text-danger">@error</h6>
            }
        }
        <form asp-action="Create" asp-controller="SubGem" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="SubGemName" class="control-label mb-1">Tên viên đá phụ</label>
                <input type="text" name="SubGemName" class="form-control" />
                <span asp-validation-for="SubGemName" class="text-danger"></span>
            </div>
            <div class="form-group m-2 mt-2">
                <label asp-for="SubGemPrice" class="control-label mb-1 mt-3">Giá viên đá phụ</label>
                <input asp-for="SubGemPrice" id="SubGemPrice" class="form-control" />
                <span asp-validation-for="SubGemPrice" class="text-danger"></span>
            </div>
            <div class="form-group m-2 mt-2">
                <label asp-for="Description" class="control-label mb-1 mt-3">Mô tả viên đá phụ</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="form-check form-switch m-4">
                <label asp-for="Active" class="control-label m-1">Hiển thị</label>
                <input class="form-check-input f-18" type="checkbox" asp-for="Active">
            </div>
            <div class="form-group row">
                <div class="col-md-8 mt-2">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
                <div class="col-md-4 mt-2">
                    <a class="m-6 btn btn-secondary" asp-action="Index">Về trang quản lí viên đá phụ</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
        <script>
        document.addEventListener("DOMContentLoaded", function() {
            const input = document.querySelector("#SubGemPrice");

            input.addEventListener("input", function (e) {
                let value = e.target.value;

                // Xóa bỏ các ký tự không phải là số
                value = value.replace(/[^0-9]/g, "");

                // Giới hạn tối đa 17 ký tự số
                if (value.length > 16) {
                    value = value.slice(0, 16);
                }

                // Nếu giá trị không rỗng, định dạng lại theo kiểu chuỗi Việt Nam
                if (value) {
                    e.target.value = new Intl.NumberFormat('vi-VN').format(parseInt(value));
                } else {
                    e.target.value = "";
                }
            });
        });
    </script>
}

