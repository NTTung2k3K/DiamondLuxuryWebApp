@model DiamondLuxurySolution.ViewModel.Models.Frame.FrameVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}

@if (Model != null)
{

    <h3 style="color: red">Bạn có muốn xóa kim cương này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                ID của Khung
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FrameId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên khung
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NameFrame)
            </dd>
            
            <dt class="col-sm-3 mb-3">
                Trọng lượng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Weight)
            </dd>
            <dt class="col-sm-3 mb-3">
                Vật liệu
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaterialVm.MaterialName)
            </dd>
            <dt class="col-sm-3 mb-3">
                Giá vật liệu
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaterialVm.Price)
            </dd>
            <dt class="col-sm-3 mb-3">
                Hình vật liệu
            </dt>
            <dd class="col-sm-9">
                @if (Model.MaterialVm.MaterialImage != null)
                {
                    <img src="@Model.MaterialVm.MaterialImage" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có logo</h5>
                }
            </dd>
        </dl>
        <form asp-action="Delete" asp-controller="Frame" method="post">
            <input type="hidden" name="FrameId" value="@Model.FrameId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a class="m-3 btn btn-secondary" asp-action="Index" asp-controller="Frame">Về trang quản lí khung</a>

        </form>
    </div>
}
else
{
    <a class="m-3 btn btn-secondary" asp-action="Index" asp-controller="Frame">Về trang quản lí khung</a>
}
