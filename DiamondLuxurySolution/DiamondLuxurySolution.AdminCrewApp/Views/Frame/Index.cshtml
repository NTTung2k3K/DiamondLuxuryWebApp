                            @Html.ActionLink("Xem chi tiết", "Detail", new { FrameId = item.FrameId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Xóa", "Delete", new { FrameId = item.FrameId }, new { @class = "btn btn-danger" })
                        }
