@model DiamondLuxurySolution.ViewModel.Models.Collection.CollectionVm

@{
    ViewData["Title"] = "Detail";
}

<h1>Chi tiết vật liệu</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.CollectionId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CollectionId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên bộ sưu tập
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CollectionName)
            </dd>
            <dt class="col-sm-4">
                Mô tả bộ sưu tập
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                Hình ảnh
            </dt>
            <dd class="col-sm-8">
                @if (Model.Thumbnail != null)
                {
                    <img src="@Model.Thumbnail" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có hình ảnh</h5>
                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Hiển thị
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Status" value="@Model.Status" disabled />
                </div>
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { CollectionId = Model.CollectionId }, new { @class = "btn btn-warning" })
        </div>
        <div class="col-sm-9">
            <a class="btn btn-secondary" asp-action="Index">Về trang quản lí bộ sưu tập</a>
        </div>
    </div>

}

