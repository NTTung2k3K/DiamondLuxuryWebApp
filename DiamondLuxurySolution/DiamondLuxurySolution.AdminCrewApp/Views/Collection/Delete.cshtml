@model DiamondLuxurySolution.ViewModel.Models.Collection.CollectionVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <h3 style="color: red">Bạn có muốn bộ sưu tập này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CollectionId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CollectionId)
            </dd>
            <dt class="col-sm-4">
                Tên bộ sưu tập
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CollectionName)
            </dd>
            <dt class="col-sm-4">
                Mô tả bộ sưu tập
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-4">
                Hình ảnh
            </dt>
            <dd class="col-sm-8">
                @if (Model.Thumbnail != null)
                {
                    <img src="@Model.Thumbnail" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có hình ảnh</h5>
                }
            </dd>

            <dt class="col-sm-4">
                Hiển thị
            </dt>
            <dd class="col-sm-8">
                <div class="form-check form-switch col-sm-8">
                    <input class="form-check-input f-18" type="checkbox" asp-for="Status" value="@Model.Status" disabled />
                </div>
            </dd>
        </dl>
        <form asp-action="Delete" asp-controller="Collection" method="post">
            <input type="hidden" name="CollectionId" value="@Model.CollectionId" />
            <div class="row">
                <div class="col-sm-4">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </div>
                <div class="col-sm-8">
                    <a asp-action="Index" class="btn btn-secondary">Về trang quản lý bộ sưu tập </a>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <a class="m-3 btn btn-secondary" asp-action="Index">Về trang quản lý bộ sưu tập </a>
}
