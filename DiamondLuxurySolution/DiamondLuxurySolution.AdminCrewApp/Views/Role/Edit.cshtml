@model DiamondLuxurySolution.ViewModel.Models.Role.RoleVm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh sửa</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">

            <form asp-action="Edit" asp-controller="Role" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group m-2">
                    <label asp-for="RoleId" class="control-label  m-2"></label>
                    <input asp-for="RoleId" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="Name" class="control-label m-2"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <label asp-for="Description" class="control-label  m-2"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                    <div class="col-md-7">
                        <a class="m-5" asp-action="Index" asp-controller="Role">Về trang quản lí chức vụ</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <a class="m-5" asp-action="Index" asp-controller="Role">Về trang quản lí chức vụ</a>
}
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
