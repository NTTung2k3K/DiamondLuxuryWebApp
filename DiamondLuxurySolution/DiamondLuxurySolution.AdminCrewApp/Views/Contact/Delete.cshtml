@model DiamondLuxurySolution.ViewModel.Models.Contact.ContactVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa Liên Hệ</h1>

<h3 style="color: red">Bạn có chắc chắn muốn xóa liên hệ này không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactId)
        </dd>
        <dt class="col-sm-2">
            Tên người dùng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactNameUser)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactEmailUser)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhoneUser)
        </dd>
        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            Trả lời
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsResponse)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="ContactId" value="@Model.ContactId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="m-3" asp-action="Index">Về trang quản lý liên hệ</a>
    </form>
</div>