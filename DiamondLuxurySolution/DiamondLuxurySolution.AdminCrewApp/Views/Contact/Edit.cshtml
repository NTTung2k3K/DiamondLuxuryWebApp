@model DiamondLuxurySolution.ViewModel.Models.Contact.ContactVm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh sửa</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}

@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">

            <form asp-action="Edit" asp-controller="Contact" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group m-2">
                    <label asp-for="ContactId" class="control-label  m-2">ID Liên Hệ</label>
                    <input asp-for="ContactId" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="DateSendRequest" class="control-label m-2">Ngày gửi</label>
                    <input asp-for="DateSendRequest" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="ContactNameUser" class="control-label m-2">Tên người dùng</label>
                    <input asp-for="ContactNameUser" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="ContactEmailUser" class="control-label  m-2">Email</label>
                    <input asp-for="ContactEmailUser" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="ContactPhoneUser" class="control-label  m-2">Số điện thoại</label>
                    <input asp-for="ContactPhoneUser" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <input asp-for="Content" class="form-control" readonly />
                </div>
                <div class="form-check form-switch m-4">
                    <label asp-for="IsResponse" class="control-label mt-1">Trả lời</label>
                    <input class="form-check-input f-18" type="checkbox" asp-for="IsResponse">
                </div>
                <div class="form-group row">
                    <div class="col-md-7">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                    <div class="col-md-5">
                        <a class="btn btn-secondary" asp-action="Index">Về trang quản lí liên hệ</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <a class="m-5 btn btn-secondary" asp-action="Index">Về trang quản lí liên hệ</a>
}
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

