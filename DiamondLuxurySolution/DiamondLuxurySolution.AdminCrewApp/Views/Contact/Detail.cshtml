@model DiamondLuxurySolution.ViewModel.Models.Contact.ContactVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết liên hệ</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID Liên Hệ
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactId)
            </dd>
            <dt class="col-sm-2">
                Tên người dùng
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactNameUser)
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactEmailUser)
            </dd>
            <dt class="col-sm-2">
                Số điện thoại
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactPhoneUser)
            </dd>
            <dt class="col-sm-2">
                Nội dung
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt class="col-sm-2">
                Ngày gửi
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateSendRequest)
            </dd>
            <dt class="col-sm-2">
                Trả lời
            </dt>
            <dd class="col-sm-10">
                @if (Model.IsResponse == true)
                {
                        <span class="badge bg-success rounded-pill">Đã trả lời</span>
                }
                else
                {
                        <span class="badge bg-danger rounded-pill">Chưa trả lời</span>
                }
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-md-2">
            @if (!Model.IsResponse == true)
            {
                @Html.ActionLink("Chỉnh sửa", "Edit", new { ContactId = Model.ContactId }, new { @class = "btn btn-warning" })
            }
        </div>
        <div class="col-md-10">
            <a class=" btn btn-secondary" asp-action="Index">Về trang quản lí liên hệ</a>
        </div>
    </div>
}


