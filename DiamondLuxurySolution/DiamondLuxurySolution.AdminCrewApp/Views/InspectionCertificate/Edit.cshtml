@model DiamondLuxurySolution.ViewModel.Models.InspectionCertificate.InspectionCertificateVm

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" asp-controller="InspectionCertificate" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group m-2">
                    <label asp-for="InspectionCertificateId" class="control-label"></label>
                    <input asp-for="InspectionCertificateId" class="form-control" readonly />
                </div>
                <div class="form-group m-2">
                    <label asp-for="InspectionCertificateName" class="control-label"></label>
                    <input asp-for="InspectionCertificateName" class="form-control"/>
                </div>
                <div class="form-group m-2">
                    <label asp-for="DateGrading" class="control-label"></label>
                    <input asp-for="DateGrading" class="form-control" />
                </div>
                <div class="form-group m-2">
                    <label class="control-label m-2">Logo hiện tại</label>
                    @if (string.IsNullOrEmpty(Model.Logo) || Model.Logo.Length <= 0)
                    {
                        <label style="color:orangered;">Không có hình ảnh</label>
                    }
                    else
                    {
                        <label>
                            <img src="@Model.Logo" style="height:100px; width:100px" />
                        </label>
                    }
                </div>
                <div class="form-group m-2">
                    <label asp-for="Logo" class="control-label m-2">Logo Mới</label>
                    <input asp-for="Logo" class="form-control" type="file" />
                </div>
                <div class="form-check form-switch m-4">
                    <label asp-for="Status" class="control-label mt-1">Hiển thị</label>
                    <input class="form-check-input f-18" type="checkbox" asp-for="Status">
                </div>
                <div class="form-group row">
                    <div class="col-md-5">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                    <div class="col-md-7">
                        <a class="m-6 btn btn-secondary" asp-action="Index">Về trang quản lí giấy chứng nhận</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <a class="m-5 btn btn-secondary" asp-action="Index">Về trang quản lí giấy chứng nhận</a>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
