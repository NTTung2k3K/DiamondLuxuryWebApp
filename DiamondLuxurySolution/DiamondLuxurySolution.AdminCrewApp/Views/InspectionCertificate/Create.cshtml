@model DiamondLuxurySolution.ViewModel.Models.InspectionCertificate.CreateInspectionCertificateRequest

@{
    ViewData["Title"] = "Create";
}
<h1>Tạo mới giấy chứng nhận</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Errors != null)
        {
            foreach (var error in ViewBag.Errors)
            {
                <h6 class="text-danger">@error</h6>
            }
        }
        <form asp-action="Create" asp-controller="InspectionCertificate" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="InspectionCertificateId" class="control-label mb-1">Mã giấy chứng nhận</label>
                <input asp-for="InspectionCertificateId" class="form-control" />
                <span asp-validation-for="InspectionCertificateId" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="InspectionCertificateName" class="control-label mb-1">Tên giấy chứng nhận</label>
                <input name="InspectionCertificateName" class="form-control" />
                <span asp-validation-for="InspectionCertificateName" class="text-danger"></span>
            </div>
            <div class="form-group m-2 mt-2">
                <label asp-for="Logo" class="control-label mb-1 mt-3">Logo giấy chứng nhận</label>
                <input type="file" asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-check form-switch m-4">
                <label asp-for="Status" class="control-label m-1">Hiển thị</label>
                <input class="form-check-input f-18" type="checkbox" asp-for="Status">
            </div>
            <div class="form-group row">
                <div class="col-md-5">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
                <div class="col-md-7 mt-2">
                    <a class="m-6 btn btn-secondary" asp-action="Index">Về trang quản lí giấy chứng nhận</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

