@model DiamondLuxurySolution.ViewModel.Models.KnowledgeNewsCategory.KnowledgeNewsCategoryVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết Kiến Thức Tin Tức</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                ID của Loại Kiến Thức Tin Tức
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.KnowledgeNewCatagoryId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên Loại Kiến Thức Tin Tức
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.KnowledgeNewCatagoriesName)
            </dd>
            <dt class="col-sm-3 mb-3">
                Mô Tả
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { knowledgeNewsCategoryId = Model.KnowledgeNewCatagoryId }, new { @class = "btn btn-warning" })
        </div>
        <div class="col-sm-9">
            <a class="btn btn-secondary" asp-action="Index">Về trang quản lý Loại Kiến Thức Tin Tức</a>
        </div>
    </div>

}