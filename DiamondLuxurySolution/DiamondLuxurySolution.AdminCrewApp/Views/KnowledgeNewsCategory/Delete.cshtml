@model DiamondLuxurySolution.ViewModel.Models.KnowledgeNewsCategory.KnowledgeNewsCategoryVm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa </h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}
@if (Model != null)
{

    <h3 style="color: red">Bạn có muốn xóa Kiến Thức Tin Tức này?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                ID của Loại Kiến Thức Tin Tức
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KnowledgeNewCatagoryId)
            </dd>
            <dt class="col-sm-4">
                Tên Loại Kiến Thức Tin Tức
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.KnowledgeNewCatagoriesName)
            </dd>
            <dt class="col-sm-4">
                Mô Tả
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>

           
        </dl>
        <form asp-action="Delete" asp-controller="KnowledgeNewsCategory" method="post">
            <input type="hidden" name="knowledgeNewsCategoryId" value="@Model.KnowledgeNewCatagoryId" />
            <div class="row">
                <div class="col-sm-4">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </div>
                <div class="col-sm-8">
                    <a asp-action="Index" class="btn btn-secondary" style="width: 310px">Về trang quản lý Loại Kiến Thức Tin Tức</a>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <a class="m-3 btn btn-secondary" asp-action="Index">Về trang quản lý Loại Kiến Thức Tin Tức</a>
}
