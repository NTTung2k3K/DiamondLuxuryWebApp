@model DiamondLuxurySolution.ViewModel.Models.KnowledgeNewsCategory.CreateKnowledgeNewsCategoryRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Tạo mới Loại Kiến Thức Tin Tức</h1>
<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="Create" asp-controller="KnowledgeNewsCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="KnowledgeNewCatagoriesName" class="control-label mb-1">Tên Loại Kiến Thức Tin Tức</label>
                <input name="KnowledgeNewCatagoriesName" class="form-control" />
                <span asp-validation-for="KnowledgeNewCatagoriesName" class="text-danger"></span>
            </div>
            @if (ViewBag.Errors != null)
            {
                foreach (var error in ViewBag.Errors)
                {
                    <h6 class="text-danger">@error</h6>
                }
            }
            <div class="form-group m-2 ">
                <label asp-for="Description" class="control-label mb-1 mt-3">Mô Tả</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>

            <div class="form-group row">
                <div class="col-md-6 mt-2">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
                <div class="col-md-6 mt-2" >
                    <a class="m-6 btn btn-secondary" asp-action="Index" style="width: 300px;">Về trang quản lí Loại Kiến Thức Tin Tức</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>

    </script>
}
