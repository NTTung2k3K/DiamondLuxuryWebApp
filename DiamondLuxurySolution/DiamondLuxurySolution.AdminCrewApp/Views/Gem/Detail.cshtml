@model DiamondLuxurySolution.ViewModel.Models.Gem.GemVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết kim cương</h1>
@if (ViewBag.Errors != null)
{
    foreach (var error in ViewBag.Errors)
    {
        <h6 class="text-danger">@error</h6>
    }
}

@if (Model != null)
{

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.GemId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GemId)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tên kim cương
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.GemName)
            </dd>
            <dt class="col-sm-3 mb-3">
                Hình kim cương
            </dt>
            <dd class="col-sm-9">
                @if (Model.GemImage != "")
                {
                    <img src="@Model.GemImage" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có logo</h5>
                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Độ đối xứng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Symetry)
            </dd>
            <dt class="col-sm-3 mb-3">
                Độ bóng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Polish)
            </dd>
            <dt class="col-sm-3 mb-3">
                Tỷ lệ
            </dt>
            <dd class="col-sm-9">
                @if (Model.ProportionImage != "")
                {
                    <img src="@Model.ProportionImage" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có logo</h5>
                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Loại
            </dt>
            <dd class="col-sm-9">
                @if (@Model.IsOrigin == true)
                {
                    <td>
                        <span>Kim cương tự nhiên</span>

                    </td>
                }
                else
                {
                    <td>
                        <span>Kim cương nhân tạo</span>

                    </td>

                }
            </dd>
            <dt class="col-sm-3 mb-3">
                Huỳnh quang
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Fluoresence" value="@Model.Fluoresence" disabled />
                </div>
            </dd>
            <dt class="col-sm-3 mb-3">
                Ngày nhận
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.AcquisitionDate)
            </dd>
            <dt class="col-sm-3 mb-3">
                Hiển thị
            </dt>
            <dd class="col-sm-9">
                <div class="form-check form-switch ">
                    <input class="form-check-input f-18 ml-3" type="checkbox" asp-for="Active" value="@Model.Active" disabled />
                </div>
            </dd>
            <dt class="col-sm-3 mb-3">
                Giấy chứng nhận
            </dt>
            <dd class="col-sm-9">
                @if (Model.InspectionCertificateVm.Logo != null)
                {
                    <img src="@Model.InspectionCertificateVm.Logo" style="style= height:100px; width:100px" />
                }
                else
                {
                    <h5>Chưa có logo</h5>
                }
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-sm-3">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { GemId = @Model.GemId }, new { @class = "btn btn-warning" })
        </div>
        <div class="col-sm-9">
            <a class="btn btn-secondary" asp-action="Index">Về trang quản lí kim cương</a>
        </div>
    </div>

}
